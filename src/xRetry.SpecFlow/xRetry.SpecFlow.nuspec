<?xml version="1.0"?>
<package>
  <metadata>
    <id>xRetry.SpecFlow</id>
    <version>$version$</version>
    <authors>Josh Keegan</authors>
    <owners>Josh Keegan</owners>
    <projectUrl>https://github.com/JoshKeegan/xRetry</projectUrl>
    <license type="expression">MIT</license>
    <requireLicenseAcceptance>false</requireLicenseAcceptance>
    <description>Allows for a @retry(n) tag to be placed above scenarios in SpecFlow.XUnit. This can be used to re-run a failed test up to n times, allowing for transient failures (e.g. network related) to be tolerated.</description>
    <copyright>Copyright Josh Keegan 2019-2021</copyright>
    <tags>SpecFlow XUnit Retry Test-Automation</tags>

    <dependencies>
      <dependency id="SpecFlow.xUnit" version="[3.9.50,3.10.0)" />
      <dependency id="xRetry" version="[$version$]" />
    </dependencies>
  </metadata>

  <files>
    <file src="xRetry.SpecFlow.targets" target="build" />
    <file src="xRetry.SpecFlow.props" target="build" />

    <file src="bin\Release\net461\xRetry.SpecFlowPlugin.dll" target="build\net461" />
    <file src="bin\Release\netstandard2.0\xRetry.SpecFlowPlugin.dll" target="build\netstandard2.0" />
  </files>
</package>