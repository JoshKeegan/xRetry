<?xml version="1.0"?>
<package>
    <metadata>
        <id>xRetry.v3.Reqnroll</id>
        <version>$version$</version>
        <authors>Josh Keegan</authors>
        <owners>Josh Keegan</owners>
        <projectUrl>https://github.com/JoshKeegan/xRetry</projectUrl>
        <license type="expression">MIT</license>
        <requireLicenseAcceptance>false</requireLicenseAcceptance>
        <description>Allows for a @retry(n) tag to be placed above scenarios in Reqnroll.xUnit. This can be used to
            re-run a failed test up to n times, allowing for transient failures (e.g. network related) to be tolerated.
        </description>
        <copyright>Copyright Josh Keegan 2019-2026</copyright>
        <tags>Reqnroll XUnit Retry Test-Automation</tags>
        <readme>docs\README.md</readme>

        <dependencies>
            <dependency id="Reqnroll.xunit.v3" version="[3.0.0,4.0.0)"/>
            <dependency id="xunit.v3.extensibility.core" version="[3.0.0,4.0.0)"/>
            <dependency id="xRetry.v3" version="[$xRetryV3VersionMin$,$xRetryV3VersionMax$)"/>
        </dependencies>
    </metadata>

    <files>
        <file src="xRetry.v3.Reqnroll.targets" target="build"/>
        <file src="xRetry.v3.Reqnroll.props" target="build"/>

        <file src="bin\Release\netstandard2.0\xRetry.v3.Reqnroll.Plugin.dll" target="build\netstandard2.0"/>
        <file src="README.md" target="docs\"/>
    </files>
</package>